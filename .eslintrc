{
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single", "avoid-escape"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "comma-dangle": [2, "always-multiline"],
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "space-in-parens": [2, "never"],
    "space-infix-ops": [2, {"int32Hint": false}],
    "eol-last": 2,
    "linebreak-style": 2,
    "no-var": 2,
    "no-const-assign": 2,
    "prefer-const": 2,

  },
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "classes": true,
    "spread": true,
    "forOf": true,
    "blockBindings": true,
    "arrowFunctions": true
  }
}
